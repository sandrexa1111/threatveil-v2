# ThreatLedge Environment Variables
# Copy this file to .env and populate with your actual values

# Frontend
NEXT_PUBLIC_APP_NAME=ThreatLedge
NEXT_PUBLIC_API_BASE=http://127.0.0.1:8000

# Backend
ALLOWED_ORIGINS=http://localhost:3000
USER_AGENT=ThreatLedgeScanner/0.1 (+https://threatledge.com)

# Database
# Leave empty to use SQLite, or set to Postgres connection string
DATABASE_URL=
SQLITE_PATH=./backend/app.db

# API Keys (optional - services will fallback gracefully if missing)
GEMINI_API_KEY=
GITHUB_TOKEN=
VULNERS_API_KEY=
OTX_API_KEY=
LAKERA_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_TOKEN=
COHERE_API_KEY=

# Security
JWT_SECRET=change_me_in_production
RATE_LIMIT_PER_MINUTE=60

# Optional Integrations
SLACK_WEBHOOK_URL=
RESEND_API_KEY=

# Server
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=info
